<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    android:id="@+id/nav_menu_full_header"
    android:layout_width="@dimen/nav_drawer_menu_maximum_width_mobile"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/AppTheme"
    android:gravity="start"
    android:layout_height="140dp">

    <LinearLayout
        android:id="@+id/nav_image_score"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="@dimen/nav_drawer_menu_margin_left_right"
        android:paddingLeft="@dimen/nav_drawer_menu_text_content_left_margin">

        <ImageView
            android:id="@+id/nav_image"
            android:layout_width="62dp"
            android:layout_height="62dp"
            app:srcCompat="@raw/person_icon_640"
            android:scaleType="centerInside"
            android:contentDescription="user_picture" />
        <TextView
            android:id="@+id/nav_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/nav_drawer_menu_user_score"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Display1"
            android:textSize="36sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal|bold"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/username_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        android:theme="@style/AppTheme"
        android:paddingStart="@dimen/nav_drawer_menu_margin_left_right"
        android:paddingLeft="@dimen/nav_drawer_menu_text_content_left_margin">

        <TextView
            android:id="@+id/nav_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="@string/user_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/nav_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_email" />
    </LinearLayout>

</RelativeLayout>
